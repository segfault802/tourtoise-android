<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:text="Ages" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1"></TextView>
        <Spinner android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/editStopMinAgeSpinner" android:layout_width="wrap_content"></Spinner>
    </LinearLayout>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:text="Time" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView5"></TextView>
    <LinearLayout android:id="@+id/linearLayout5" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/editStopStartTime" android:inputType="time" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1"></EditText>
        <TextView android:text=" to " android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content"></TextView>
        <EditText android:id="@+id/editStopEndTime" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:inputType="time">
            <requestFocus></requestFocus>
        </EditText>
    </LinearLayout>
    
</LinearLayout>
