<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:weightSum="1" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:text="Tour Name" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView1"></TextView>
    <EditText android:id="@+id/tourTitleEditText" android:layout_height="wrap_content" android:layout_width="fill_parent">
        <requestFocus></requestFocus>
    </EditText>
    <TextView android:text="Description" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView2"></TextView>
    <EditText android:id="@+id/tourDescriptionEditText" android:layout_height="wrap_content" android:inputType="textMultiLine" android:layout_weight="0.10" android:layout_width="fill_parent"></EditText>
    <TextView android:text="Tags" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView3"></TextView>
    <EditText android:id="@+id/tourTagsEditText" android:layout_height="wrap_content" android:layout_width="fill_parent"></EditText>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="fill_parent">
        <RadioGroup android:id="@+id/tourTypeRadioGroup" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
            <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Walking" android:id="@+id/walkingTourRadioButton"></RadioButton>
            <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Driving" android:id="@+id/drivingTourradioButton"></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="fill_parent">
        <Button android:text="Add Stop" android:id="@+id/addTourStopButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="Edit Stops" android:id="@+id/editTourStopsButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="Add Tour Images.." android:id="@+id/addTourImagesButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:layout_width="fill_parent">
        <Button android:text="Save..." android:id="@+id/saveTourButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="Discard..." android:id="@+id/discardTourButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    </LinearLayout>
    
</LinearLayout>
