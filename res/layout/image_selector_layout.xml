<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="vertical" android:background="@drawable/background_dots">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout1">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tour/Stop Media Title"
            android:textAppearance="?android:attr/textAppearanceLarge" >
</TextView>

        <ImageButton
            android:id="@+id/addMediaImgButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add" />

    </LinearLayout>
    <GridView
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_weight="1" android:layout_height="wrap_content">
        
    </GridView>

    <LinearLayout
        android:id="@+id/audioHolderImageSelectorLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <SeekBar android:layout_height="wrap_content" android:layout_weight="10" android:layout_width="wrap_content" android:id="@+id/audioMediaSeekBar"></SeekBar>
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout3" android:layout_weight="1" android:orientation="vertical" android:layout_height="wrap_content">
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:text="0:00" android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/currTimeMediaTextView"></TextView>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:text="x:xx" android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/totalTimeMediaTextView"></TextView>
        </LinearLayout>
        <Button android:layout_height="wrap_content" android:layout_weight="1" android:text="Play" android:layout_width="wrap_content" android:id="@+id/playAudioMediaButton"></Button>
        <Button android:layout_height="wrap_content" android:layout_weight="1" android:text="Rec" android:layout_width="wrap_content" android:id="@+id/recAudioMediaButton"></Button>
    </LinearLayout>
</LinearLayout>
